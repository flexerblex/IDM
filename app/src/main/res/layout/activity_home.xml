<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <Button
        android:id="@+id/buttonLogOut2"
        android:layout_width="118dp"
        android:layout_height="48dp"
        android:text="LogOut"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="419dp"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="120dp"
        android:layout_height="31dp"
        android:fontFamily="@font/sarala"
        android:text="Welcome,"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.154" />

    <TextView
        android:id="@+id/personName"
        android:layout_width="183dp"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/sarala"
        android:text="Admin!"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="339dp"
        android:layout_height="21dp"
        android:layout_marginTop="14dp"
        android:text="______________________________________________________"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personName"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="291dp"
        android:layout_height="24dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/sarala"
        android:text="REGISTER BIOMETRIC DATA"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personName"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/faceID"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="331dp"
        android:layout_height="44dp"
        android:layout_gravity="start"
        android:background="@drawable/rounded_btn"
        android:backgroundTint="#FF009688"
        android:enabled="true"
        android:fontFamily="@font/sarala"
        android:text="REGISTER FACEID"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.414" />

    <Button
        android:id="@+id/voiceRegister"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="331dp"
        android:layout_height="44dp"
        android:layout_gravity="start"
        android:background="@drawable/rounded_btn"
        android:backgroundTint="#FF009688"
        android:enabled="true"
        android:fontFamily="@font/sarala"
        android:text="REGISTER VOICE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.595" />

    <Button
        android:id="@+id/fingerprintRegister"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="331dp"
        android:layout_height="44dp"
        android:layout_gravity="start"
        android:background="@drawable/rounded_btn"
        android:backgroundTint="#FF009688"
        android:enabled="true"
        android:fontFamily="@font/sarala"
        android:text="REGISTER FINGERPRINT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.505" />

</androidx.constraintlayout.widget.ConstraintLayout>